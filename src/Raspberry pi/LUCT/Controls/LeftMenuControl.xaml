<UserControl
    x:Class="LUCT.Controls.LeftMenuControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:telerikDataControls="using:Telerik.UI.Xaml.Controls.Data"
    xmlns:telerikListView="using:Telerik.UI.Xaml.Controls.Data.ListView"
    xmlns:local="using:LUCT.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <telerikDataControls:RadListView ItemsSource="{Binding Path=ItemsSource}" RelativePanel.Below="combo" VerticalAlignment="Center" Width="200" Margin="20,100"  x:Name="LeftMenu" HorizontalAlignment="Left">
        <telerikDataControls:RadListView.ItemStyle>
            <Style TargetType="telerikListView:RadListViewItem">
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="Margin" Value="0.5"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Background" Value="#EEEEEE"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </telerikDataControls:RadListView.ItemStyle>
    </telerikDataControls:RadListView>
</UserControl>
